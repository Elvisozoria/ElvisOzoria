body
	background white
.aprenderas
	margin-top 1em
	li
		background url("../img/icon_list.png") left no-repeat
		padding-left 35px
		line-height 1.5
.contenido
	margin 0 auto
	max-width 690px
	h3
		text-align center
	.usuario 
		display inline-block
		width 45%
		padding 0.2em
	.usuario--negativo
		vertical-align top
		display inline-block
		width 45%
		border-left 1px solid grey
		padding 0.2em
	li
		line-height 1.5
		font-size 1.5em
.correo
	text-align center
	background $azul
	padding 2.5em 0
	position relative
	#mc_embed_signup
		// width 400px
		padding 1em
		text-align center
		display inline-block

		#mc-embedded-subscribe
			padding 1em
		.subencabezado
			font-size 26px
			margin 0 0 1.5em 0
			display block 
			color white
		.encabezado
			color $naranja1
			font-size 46px
			display block 
			margin-bottom 0
				
		input
			text-align center
			margin .5em
			transition: all 1.5s ease;
			-moz-transition: all 1.5s ease;
			-o-transition: all 1.5s ease;
			-webkit-transition: all 1.5s ease;
			&[type="submit"]
				background $naranja1
				border 1px solid $naranja1
				&:hover
					background green
					box-shadow 2px 2px 12px
					border 1px solid green
					
			&[type="email"]
				margin-bottom 1em
				&[type="email"]:focus
					border-radius 50px
					width 300px
					box-shadow 2px 2px 2px
	.flecha--abajo {
	    width:0px;
	    height:0px;
	    border-left:60px solid transparent; /* izquierda flecha */
	    border-right:60px solid transparent; /* derecha flecha */
	    border-top:60px solid #fff; /* base flecha y color*/
	    font-size:0px;
	    line-height:0px;
	    
	    position absolute
	    top 0
	    left 50%
	    margin-left -60px
	}


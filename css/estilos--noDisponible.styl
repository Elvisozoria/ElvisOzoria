@import 'estilos.styl'



.fondo
	width 100%
	height 100%
	z-index: -1
	background url(../img/nasa.jpg) center center
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	position absolute
	top 0
	

article
	background rgba(225,225,225,0.1)
	color white
	left 40%
	max-width 500px
	padding 2em 1em 4em
	position absolute
	text-align center
	top 10%
	z-index 200
	h1,h2
		text-shadow 6px 4px 6px black
		margin 0.2em
		
	input
		width 55%
		margin-top 1em
		text-align center
		// border-radius 3px
		box-shadow 6px 4px 6px black
	a
		background #FB1414  !important
		box-shadow 6px 4px 6px black !important
		
ul
	position absolute
	bottom 10px
	li
		list-style none
		z-index 99
		display inline-block
		margin-right 50px
		a
			color white

//breakpoints
@media(max-width: 850px)
	article
		padding 1em
@media(max-width:700px),(max-height:550px)
	article
		top 0
		
@media(max-width:600px),(max-height:450px)
	article
		padding 0 1em
		h1,h2
			font-size 1em
		a
			margin-top 1em
			padding 1.3em 0.2em
@media (max-width:400px)
	.fondo
		background-position left
	article
		width auto
		left 0
		top 10%
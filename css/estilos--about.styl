@import url('estilos.css')


a
	color black
	



			
		

.bio
	&--contenido
		max-width 50%
		vertical-align top
		li
			margin-left 2em
			
	&--titulo,&--contenido
		display inline-block
		margin-left 2em
		margin 0.5em 1em
	&--titulo
		max-width 700px
	
		
.blog--
	&contenido
		margin-left 2.5em
	&diferencias
		margin-left 2em
		li
			margin-left 1em
	&titulo
		font-size 26px
		margin-left 1em

	&correo
		background #fff

.foto--elvis
	display inline-block
	margin 0
	img
		width 320px
	

header
	text-align center
	margint-top 0.6em
	a
		font-size 28px
		&:nth-child(1)
			color #3498db
			border-right 3px solid black
			padding-right 3px 
		&:nth-child(2)
			color #f6921d			
			
.sieteCosas
	background #3498db
	padding 2em
	text-align center
	h3
		font-size 32px
	
	ol
		margin auto
		display inline-block
		text-align left
	li
		font-weight 900
.sinSerifa
	li
		max-width 1000px
		margint-top 0.8px
		
.skills
	display none
	height 300px
	img
		height 100%
		



//OOcssClases

.boton
	margin 1em auto
	&#trabajemos,&#entrarAlBlog
		color white
	&#entrarAlBlog
		margin-left -67px
		left 50%
		position absolute
	
.sinSerifa
	font-family: 'EB Garamond', sans-serif;
	font-size 20px
	line-height 1.5em
.resaltado--azul
	background lighten(#3498db,20%)
.tachado
	color #666
	text-decoration line-through
	font-weight 300

.posdata
	line-height 1
	font-size 16px
	margin 0
	text-align center
	

@media(max-width:750px)
	.foto--elvis
		width 40%
		img
			width 100%
@media(max-width:450px)
	.foto--elvis
		display none
	.bio--contenido
		max-width 100%
@import 'estilos.styl'


a
	color black
	


.about--elvis
	padding-top 2em
	margin 0 auto
	max-width 1000px
.about--blog
	margin 0 auto
	max-width 1000px
			

.bio
	&--contenido
		max-width 50%
		vertical-align top
		li
			margin-left 2em
			
	&--titulo,&--contenido
		display inline-block
		margin-left 2em
		margin 0.5em 1em
	&--titulo
		max-width 700px
	
		
.blog--
	&contenido
		margin 1em
	&diferencias
		margin 1em
		margin-bottom 10em
		li
			margin-left 1em
		.boton
			z-index 2
	&titulo
		font-size 26px
		margin-left 1em

	&correo
		background black
		color white
		padding 1em 0
		text-align center
		h3
			color  $azulFondo
			font-size 36px
			max-width 650px
			margin 1em auto
		p
			max-width 260px
			font-size 24px
		label
			display block 
		input
			margin 0.5em auto	
			&[type='submit']
				background $naranja1
				padding 1em
				box-shadow 2px 2px 20px		
#mc_embed_signup
	background $azulBase
	display inline-block


.foto--elvis
	display inline-block
	margin 0
	img
		width 320px
		border-radius 50%
		border 1px solid 
		background grey
	

header
	text-align center
	margint 2em
	a
		font-size 28px
		&:nth-child(2)
			color #3498db
			border-right 3px solid black
			padding-right 3px 
		&:nth-child(3)
			color #f6921d		
.menuAbajo--topTrigger
	position absolute
	right 1em
	top .4em	
			
.sieteCosas
	background #3498db
	padding 2em
	text-align center
	h3
		font-size 32px
	
	ol
		margin auto
		display inline-block
		text-align left
	li
		font-weight 900
.sinSerifa
	li
		max-width 1000px
		margint-top 0.8px
		
.skills
	display none
	height 300px
	img
		height 100%
		



//OOcssClases

.boton
	margin 1em auto
	&#trabajemos,&#entrarAlBlog
		color white
	&#entrarAlBlog
		margin-left -67px
		left 50%
		position absolute
	

	

@media(max-width:750px)
	.foto--elvis
		width 40%
		img
			width 100%
	.menuAbajo--topTrigger
		top 1.5em
@media(max-width:450px)
	.foto--elvis
		display none
	.bio--contenido
		max-width 100%
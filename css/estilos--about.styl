.sieteCosas
	background #3498db
	padding 2em
	text-align center
	h3
		font-size 32px
	
	ol
		margin auto
		display inline-block
		text-align left
	li
		font-weight 900
			
		

.bio
	&--contenido
		max-width 50%
		vertical-align top
		li
			margin-left 2em
			
	&--titulo,&--contenido
		display inline-block
		margin-left 2em
		
.blog--
	&contenido
		margin-left 2.5em
	&diferencias
		margin-left 2em
		li
			margin-left 1em
	&titulo
		font-size 26px
		margin-left 1em

	&correo
		background #fff

.foto--elvis
	display inline-block
	position relative
	margin 0
	img
		width 320px
	

header
	text-align center
	a
		font-size 28px
		&:nth-child(1)
			color black
			border-right 3px solid black
			padding-right 3px 
			
.skills
	display none
	height 300px
	img
		height 100%
		



